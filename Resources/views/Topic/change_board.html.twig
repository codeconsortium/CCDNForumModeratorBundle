{% extends param('ccdn_forum_moderator.topic.change_board.layout_template') %}

{% block stylesheets %}
	{{ parent() }}
	<link href="{{ asset('bundles/ccdncomponentcrumbtrail/css/crumbs.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block title %}{{ 'title.topic.change_board' | trans({'%topic_title%': topic.getTitle }, 'CCDNForumModeratorBundle') }}{% endblock %}

{% block sidebar %}
	{{ parent() }}
	
{% endblock %}

{% block body %}

{% include 'CCDNComponentCommonBundle:Flashes:flashes.html.twig' %}

<div class="section_wrap_top">
	{% include 'CCDNComponentCrumbTrailBundle:Trail:trail.html.twig' with {'crumbs': crumbs } %}
</div>
<div class="section_wrap_bottom">
	<div class="section_header">
		<h2>{{ 'title.topic.change_board' | trans({'%topic_title%': topic.getTitle }, 'CCDNForumModeratorBundle') }}</h2>
	</div>
</div>

<div class="section_wrap_standalone">	
	<div class="section_table_panel">
		{% form_theme form param('ccdn_forum_moderator.template.theme') %}
		<form action="{{ path('cc_moderator_forum_topic_change_board', { 'topic_id': topic.getId} ) }}" method="post" {{ form_enctype(form) }}>
			{{ form_row(form._token) }}
			<table class="common_list">
				<tbody>
					<tr class="{{ cycler(['row_odd', 'row_even'], 'cycle') }}">
						<td class="form_label">{{ form_label(form.board, null, { 'label': 'form.label.board'| trans({}, 'CCDNForumModeratorBundle') }) }}</td>
						<td class="form_widget">
							{{ form_errors(form.board) }}
							{{ form_widget(form.board) }}
						</td>
					</tr>
					<tr class="{{ cycler(['row_odd', 'row_even'], 'cycle') }}">
						<td class="form_tool_strip" colspan="2">
							<input type="submit" class="button_red" value="{{ 'form.button.topic.move_to_board' | trans({}, 'CCDNForumModeratorBundle') }}">
						</td>
					</tr>
				</tbody>
			</table>
		</form>
	</div>
</div>

<div class="section_wrap_standalone">
	{% include 'CCDNComponentCrumbTrailBundle:Trail:trail.html.twig' with {'crumbs': crumbs } %}
</div>

{% endblock %}