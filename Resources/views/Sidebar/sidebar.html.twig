{%- spaceless -%}
	{%- set route = app.request.attributes.get('_route') -%}

	<li class="nav-header">{{- 'ccdn_forum_moderator.sidebar.header.tools' | trans({}, 'CCDNForumModeratorBundle') -}}</li>

	{%- if route == 'ccdn_forum_moderator_flagged_show_all' -%}
		<li class="active"><a href="{{- path('ccdn_forum_moderator_flagged_show_all', {}) -}}"><i class="icon-white icon-flag"></i>&nbsp;{{- 'ccdn_forum_moderator.sidebar.link.show_all_flagged_posts' | trans({}, 'CCDNForumModeratorBundle') -}}</a></li>
	{%- else -%}
		<li><a href="{{- path('ccdn_forum_moderator_flagged_show_all', {}) -}}"><i class="icon-flag"></i>&nbsp;{{- 'ccdn_forum_moderator.sidebar.link.show_all_flagged_posts' | trans({}, 'CCDNForumModeratorBundle') -}}</a></li>
	{%- endif -%}

	{%- if route == 'ccdn_forum_moderator_post_show_all_locked' -%}
		<li class="active"><a href="{{- path('ccdn_forum_moderator_post_show_all_locked', {}) -}}"><i class="icon-white icon-lock"></i>&nbsp;{{- 'ccdn_forum_moderator.sidebar.link.show_all_locked_posts' | trans({}, 'CCDNForumModeratorBundle') -}}</a></li>
	{%- else -%}
		<li><a href="{{- path('ccdn_forum_moderator_post_show_all_locked', {}) -}}"><i class="icon-lock"></i>&nbsp;{{- 'ccdn_forum_moderator.sidebar.link.show_all_locked_posts' | trans({}, 'CCDNForumModeratorBundle') -}}</a></li>
	{%- endif -%}

	{%- if route == 'ccdn_forum_moderator_topic_show_all_closed' -%}
		<li class="active"><a href="{{- path('ccdn_forum_moderator_topic_show_all_closed', {}) -}}"><i class="icon-white icon-lock"></i>&nbsp;{{- 'ccdn_forum_moderator.sidebar.link.show_all_closed_topics' | trans({}, 'CCDNForumModeratorBundle') -}}</a></li>
	{%- else -%}
		<li><a href="{{- path('ccdn_forum_moderator_topic_show_all_closed', {}) -}}"><i class="icon-lock"></i>&nbsp;{{- 'ccdn_forum_moderator.sidebar.link.show_all_closed_topics' | trans({}, 'CCDNForumModeratorBundle') -}}</a></li>
	{%- endif -%}

	{%- if status_codes is defined -%}
		<li class="divider"></li>
		<li class="nav-header">{{- 'ccdn_forum_moderator.sidebar.header.flags_by_status' | trans({}, 'CCDNForumModeratorBundle') -}}</li>
		{%- if app.request.attributes.get('_route') == 'ccdn_forum_moderator_flagged_show_all_status' or app.request.attributes.get('_route') == 'ccdn_forum_moderator_flagged_show_all_status_paginated' -%}
			{%- for status_key, status in status_codes -%}
				{%- if app.request.get('status') -%}
					{%- if app.request.get('status') == status_key -%}
						<li class="active"><a href="{{- path('ccdn_forum_moderator_flagged_show_all_status', {'status':status_key}) -}}"><i class="icon-white icon-tag"></i>&nbsp;{{- status -}}</a></li>
					{%- else -%}
						<li><a href="{{- path('ccdn_forum_moderator_flagged_show_all_status', {'status':status_key}) -}}"><i class="icon-tag"></i>&nbsp;{{- status -}}</a></li>
					{%- endif -%}
				{%- else -%}
					<li><a href="{{- path('ccdn_forum_moderator_flagged_show_all_status', {'status':status_key}) -}}"><i class="icon-tag"></i>&nbsp;{{- status -}}</a></li>
				{%- endif -%}
			{%- endfor -%}
		{%- else -%}
			{%- for status_key, status in status_codes -%}
				<li><a href="{{- path('ccdn_forum_moderator_flagged_show_all_status', {'status':status_key}) -}}"><i class="icon-tag"></i>&nbsp;{{- status -}}</a></li>
			{%- endfor -%}
		{%- endif -%}
	{%- endif -%}
	
{%- endspaceless -%}
