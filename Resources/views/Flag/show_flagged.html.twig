{% extends param('ccdn_forum_moderator.flag.layout_templates.show_flagged') %}

{% block stylesheets %}
	{{ parent() }}
	<link href="{{ asset('bundles/ccdncomponentcrumbtrail/css/crumbs.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('bundles/ccdncomponentcommon/js/jquery.checkboxes.js') }}" type="text/javascript"></script>
{% endblock %}

{% block title %}{{ 'title.flag.show.all' | trans({}, 'CCDNForumModeratorBundle') }}{% endblock %}

{% block sidebar %}
	{{ parent() }}

	<div class="sidebar">
		<div class="sidebar_header"><span class="sidebar_header">{{ 'sidebar.header.tools' | trans({}, 'CCDNForumModeratorBundle') }}</span></div>
		<div class="sidebar_panel"><a class="sidebar" href="{{ path('cc_moderator_forum_flagged_show_all', {}) }}">{{ 'sidebar.link.show_all_flagged_posts' | trans({}, 'CCDNForumModeratorBundle') }}</a></div>	
		<div class="sidebar_panel"><a class="sidebar" href="{{ path('cc_moderator_forum_posts_show_all_locked', {}) }}">{{ 'sidebar.link.show_all_locked_posts' | trans({}, 'CCDNForumModeratorBundle') }}</a></div>
		<div class="sidebar_panel"><a class="sidebar" href="{{ path('cc_moderator_forum_topics_closed_show_all', {}) }}">{{ 'sidebar.link.show_all_closed_topics' | trans({}, 'CCDNForumModeratorBundle') }}</a></div>
	</div>

	<div class="sidebar">
		<div class="sidebar_header"><span class="sidebar_header">{{ 'sidebar.header.flags_by_status' | trans({}, 'CCDNForumModeratorBundle') }}</span></div>
		{% for status_key, status in status_codes %}
		<div class="sidebar_panel"><a class="sidebar" href="{{ path('cc_moderator_forum_flagged_show_all_status', {'status':status_key}) }}">{{ status }}</a></div>
		{% endfor %}
	</div>
{% endblock %}

{% block body %}

{% include 'CCDNComponentCommonBundle:Flashes:flashes.html.twig' %}

<div class="section_wrap_top">
	{% include 'CCDNComponentCrumbTrailBundle:Trail:trail.html.twig' with {'crumbs': crumbs } %}
</div>
<div class="section_wrap_bottom">
	<div class="section_header">
		<h2>{{ 'title.flag.show.all' | trans({}, 'CCDNForumModeratorBundle') }}</h2>
	</div>
</div>
	
<div class="section_wrap_standalone">
	<form method="POST" action="{{ path('cc_moderate_forum_flag_action_bulk') }}">
	<div class="section_tool_strip">
		<input type="submit" class="button_red" value="{{ 'link.flag.delete' |trans({}, 'CCDNForumModeratorBundle') }}" name="submit_delete">
		<select name="select_mark_as" class="widget_select">
			{% for status_key, status in status_codes %}
				<option class="widget_select" value="{{ status_key }}">{{ status }}</option>
			{% endfor %}
		</select>
		<input type="submit" class="button_blue" value="{{ 'link.flag.mark_as' |trans({}, 'CCDNForumModeratorBundle') }}" name="submit_mark_as">
	</div>
	{% if pager.haveToPaginate %}
	<div class="pagerfanta">
		{{ pagerfanta(pager, 'default', {'routeName':'cc_moderator_forum_flagged_show_all_status_paginated', 'routeParams':{}} ) }}
	</div>
	{% endif %}
	<div class="section_table_panel">
		<table class="common_list">
			<thead>
				<tr>
					<th class="icon"></th>
					<th class="left"><span class="table_header">{{ 'flag.table.head.topic' | trans({}, 'CCDNForumModeratorBundle') }}</span></th>
					<th class="left"><span class="table_header">{{ 'flag.table.head.board' | trans({}, 'CCDNForumModeratorBundle') }}</span></th>
				</tr>
			</thead>
			<tbody>
			{% for post_key, post in posts %}
				<tr class="{{ cycler(['row_odd', 'row_even'], 'posts') }} }}">
					<td class="icon16"><img class="icon16" width="16" height="16" src="{{ asset('bundles/ccdncomponentcommon/images/icons/Black/16x16/16x16_communication.png') }}" alt="icon"></td>
					<td class="left">
						<span class="table_data">
							<a href="{{ path('cc_forum_topic_show', {'topic_id': post.getTopic.getId }) }}">#{{post.getId}}&nbsp;{{ post.getTopic.getTitle }}</a>
							<br>
							{{ 'post.posted_by' | trans({}, 'CCDNForumForumBundle') }}
							{% if post.getCreatedBy %}
								<a href="{{ path(user_profile_route, {'user_id': post.getCreatedBy.getId } ) }}">{{ post.getCreatedBy }}</a>
							{% else %}
								Guest
							{% endif %}
							{{ 'actioned.at' | trans({'%date%': post.getCreatedDate|date("d/m/Y - H:i:s")}, 'CCDNForumForumBundle') }}
						</span>
					</td>
					<td class="left">
						<span class="table_data">
						{{ 'flag.posted_on_board' | trans({}, 'CCDNForumModeratorBundle') }}&nbsp;
						<a href="{{ path('cc_forum_category_show', {'category_id': post.getTopic.getBoard.getCategory.id }) }}">{{ post.getTopic.getBoard.getCategory.getName }}</a> / 
						<a href="{{ path('cc_forum_board_show', {'board_id': post.getTopic.getBoard.id }) }}">{{ post.getTopic.getBoard.getName }}</a>
						</span>
					</td>
				</tr>
				<tr class="{{ cycler(['row_odd', 'row_even'], 'posts') }}">
					<td class="center"></td>
					<td class="center" colspan="2">
						<div class="section_table_panel">
							<table class="common_list" style="border-top: none !important; border-left: 1px solid #eee !important;">
								<thead>
									<tr>
										<th class="icon"><input type="checkbox" id="check_all" name="check_all_for_{{ post.getId }}"></th>
										<th class="icon"><img class="icon16" width="16" height="16" src="{{ asset('bundles/ccdncomponentcommon/images/icons/Black/16x16/16x16_flag.png') }}" alt="icon"></th>
										<th class="left"><span class="table_header">{{ 'flag.table.head.reason' | trans({}, 'CCDNForumModeratorBundle') }}</span></th>
										<th class="left"><span class="table_header">{{ 'flag.flagged_by' | trans({}, 'CCDNForumModeratorBundle') }}</span></th>
										<th class="left"><span class="table_header">{{ 'actioned.at' | trans({}, 'CCDNForumModeratorBundle') }}</span></th>
										<th class="left"><span class="table_header">{{ 'flag.table.head.status' | trans({}, 'CCDNForumModeratorBundle') }}</span></th>
									</tr>
								</thead>
								<tbody>
									{% for flag_key, flag in post.flags %}
									<tr class="{{ cycle(['row_odd', 'row_even'], flag_key) }}">
										<td class="icon16">
											<input type="checkbox" id="flag_{{ flag.id }}" name="check_{{ flag.id }}_for_{{ post.getId }}">
										</td>
										<td class="icon16"><img class="icon16" width="16" height="16" src="{{ asset('bundles/ccdncomponentcommon/images/icons/Black/16x16/16x16_flag.png') }}" alt="icon"></td>
										<td class="left">
											<span class="table_data">
											<a href="{{ path('cc_moderator_forum_flag_show', {'flag_id': flag.getId }) }}">{{ reason_codes[flag.getReason] }}</a>
											</span>
										</td>
										<td class="center" style="width: 200px;">
											<span class="table_data">
											{% if flag.getFlaggedBy %}
												<a href="{{ path(user_profile_route, {'user_id': flag.getFlaggedBy.getId } ) }}">{{ flag.getFlaggedBy }}</a>
											{% else %}
												Guest
											{% endif %}
											</span>
										</td>
										<td class="center" style="width: 150px;">
											<span class="table_data">
											{{ flag.getFlaggedDate|date("d/m/Y - H:i:s") }}
											</span>
										</td>
										<td class="center" style="width: 100px;">
											<span class="table_data">
											<a href="{{ path('cc_moderator_forum_flag_show', {'flag_id': flag.getId }) }}">{{ status_codes[flag.getStatus] }}</a>
											</span>
										</td>
									</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					</td>
				</tr>
			{% else %}
				<tr>
					<td class="center" colspan="6">
						<span class="table_empty">{{ 'flag.table.empty' | trans({}, 'CCDNForumModeratorBundle') }}</span>
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>
	</form>

	{% if pager.haveToPaginate %}
	<div class="pagerfanta">
		{{ pagerfanta(pager, 'default', {'routeName':'cc_moderator_forum_flagged_show_all_status_paginated', 'routeParams':{}} ) }}
	</div>
	{% endif %}
</div>

<div class="section_wrap_standalone">
	{% include 'CCDNComponentCrumbTrailBundle:Trail:trail.html.twig' with {'crumbs': crumbs } %}
</div>

{% endblock %}